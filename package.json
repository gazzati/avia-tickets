{
  "name": "avia-tickets",
  "version": "1.0.1",
  "repository": "https://github.com/gazzati/avia-tickets.git",
  "author": "gazzati <gazzaevtimur@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node build/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --quiet src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src/**/*.ts --fix",
    "type": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@fastify/sensible": "^5.2.0",
    "@fastify/swagger": "^8.2.1",
    "@fastify/swagger-ui": "^1.3.0",
    "@sinclair/typebox": "^0.25.16",
    "@types/module-alias": "^2.0.1",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2",
    "fastify-plugin": "^4.4.0",
    "joi": "^17.7.0",
    "lint-staged": "^13.1.0",
    "module-alias": "^2.2.2",
    "pg": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "simple-pre-commit": "^1.2.1",
    "typeorm": "^0.3.11"
  },
  "devDependencies": {
    "@gazzati/eslint-config-node": "^1.0.7",
    "@types/node": "^18.11.18",
    "eslint": "^8.30.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "simple-pre-commit": "npx lint-staged",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
